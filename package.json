{
	"name": "use-scroll-bar",
	"version": "0.0.0",
	"description": "响应式地变换滚动条样式 (vue3)",
	"main": "./dist/index.umd.js",
	"module": "./dist/index.es.js",
	"types": "./dist/exports.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.umd.js",
			"import": "./dist/index.es.js",
			"types": "./dist/exports.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vite",
		"test": "vitest",
		"build-js": "vite build",
		"test:ui": "vitest --ui",
		"test:update": "vitest -u",
		"prepublishOnly": "npm run build",
		"play": "pnpm -C examples/vite run dev",
		"play:build": "pnpm -C examples/vite run build",
		"build-types": "vue-tsc -p tsconfig.build.json",
		"play:preview": "pnpm -C examples/vite run preview",
		"build": "npm-run-all --parallel build-js build-types",
		"release": "bumpp --commit --push --tag && npm publish"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dishait/useScrollBar.git"
	},
	"keywords": [
		"vite",
		"vue3",
		"component",
		"typescript"
	],
	"license": "MIT",
	"author": {
		"name": "markthree",
		"email": "1801982702@qq.com",
		"url": "https://github.com/markthree"
	},
	"devDependencies": {
		"@types/node": "^18.11.15",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vitest/ui": "^0.25.8",
		"bumpp": "^8.2.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^4.9.4",
		"unocss": "^0.47.6",
		"vite": "^4.0.1",
		"vitest": "^0.25.8",
		"vue": "^3.2.45",
		"vue-dark-switch": "^0.1.11",
		"vue-tsc": "^1.0.13"
	},
	"peerDependencies": {
		"vue": ">=3.0.0"
	},
	"dependencies": {
		"@vueuse/core": "^9.6.0"
	}
}